<article class="w-5/6 max-w-3xl my-3 mx-auto relative h-80 bg-gray-50 shadow-md items-center flex flex-col justify-center p-4 md:hover:shadow-lg md:hover:scale-105 md:hover:-translate-y-px md:transform transform-none transition-all">
    <div class="w-full flex flex-col justify-center items-center max-w-lg">
        <div class="flex flex-col items-center uppercase absolute -top-2 -left-2 bg-pink-600 text-white shadow-md px-2 py-1">
            <span>
                <%= list.date.date %>
            </span>
            <small class="text-xs">
                <%= list.date.month %>
            </small>
        </div>
        <div class="flex items-center justify-center">
            <strong class="mr-1 text-xs text-gray-400 font-title">
                Created by:
            </strong>
            <small class="text-pink-600 capitalize font-regular">
                <%= list.name %>
            </small>
        </div>
        <strong class="font-title text-2xl text-center mx-auto capitalize bg-gradient-to-r from-pink-600 to-purple-700 text-transparent bg-clip-text font-semibold mb-4">
            <%= list.title %>
        </strong>
        <p class="text-center leading-relaxed text-sm text-gray-500">
            <% if (list.description) {%>
                <%= list.description %>
            <% } else {%>
                No description available
            <% } %>
        </p>
        <a href="/moovey/list/<%= list.lid %>" class="mx-auto my-4 uppercase text-base text-gray-400 hover:text-gray-700 transition-colors">
            read more
        </a>
    </div>
</article>