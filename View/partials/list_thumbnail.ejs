<article data-animate="opacity-50" class="scrollArticle opacity-50 bg-white hover:bg-pink-50 transition-all hover:scale-105 hover:shadow-2xl transform mb-10 w-4/5 lg:w-full mx-auto p-4 shadow-lg rounded-md max-w-lg relative cursor-default max-h-60">
    <h2 class="font-special font-semibold text-black capitalize text-center break-words">
        <%= list.title %>
    </h2>

    <small class="text-xs w-4/5 mx-auto font-regular italic text-center pl-1.5 my-1.5 text-gray-500 block">
        <% if (list.description) {%>
            <%= list.description.slice(0,50) + "..." %>
        <% } else {%>
            No description available
        <% } %>
    </small>

    <% console.log(locals) %>

    <section class="flex items-center justify-center flex-col gap-1 mx-auto my-3">
        <img 
            class="h-14 w-14 block object-cover rounded-full p-0.5 shadow-md bg-white sm:h-16 sm:w-16 object-center"
            <% if(list.picture) {%>
            src="<%= list.picture %>"
            <% } else { %>
            src="/static/assets/image-not-found.png"
            <% } %>
            alt="">
        <small class="text-pink-600 text-xs font-semibold font-special">
            <%= list.name %>
        </small>
    </section>
    
    <!-- info list hangs outside the card -->
    <section class="absolute -bottom-12 left-0 w-full grid place-items-center">
        <ul class="flex items-center justify-between text-xs my-4 text-gray-500 mx-auto w-max gap-5 sm:gap-8">
            <li class="flex items-center">
                <i class="far fa-eye mr-1 inline-block"></i>
                <span>145</span>
            </li>
            <li class="flex items-center">
                <i class="far fa-star mr-1 inline-block"></i>
                <span>6.5/10</span>
            </li>
            <li class="flex items-center">
                <i class="far fa-comment-alt mr-1 inline-block"></i>
                <span>23</span>
            </li>
            <li class="flex items-center">
                <i class="far fa-calendar-alt mr-1 inline-block"></i>
                <span class="capitalize">
                    <%= list.date.date %>-<%= list.date.month %>-<%= list.date.year %>
                </span>
            </li>
        </ul>
    </section>

    <a href="/moovey/list/<%= list.lid %>" class="mt-auto block mx-auto w-max text-black font-regular font-semibold capitalize text-xs  outline-none focus:outline-none hover:text-pink-600 sm:text-sm">
        go to list
    </a>
</article>