<article class="relative mx-auto w-64 h-96 rounded-md overflow-hidden transform transition-all group shadow-lg hover:shadow-2xl flex flex-col items-start">
    <!-- add btn  -->
    <form action="<%= actionURL %>" method="POST">
        <button type="submit" class="absolute top-1/3 md:top-1/2 md:-translate-y-1/2 md:opacity-0 md:group-hover:opacity-100 left-1/2 transform -translate-x-1/2 outline-none focus:outline-none fa fa-plus-square rounded-full text-white text-5xl z-30"></button>
        <input type="hidden" name="step" value="3">
        <input type="hidden" name="imdbid" value="<%= imdbid %>">
    </form>

    <img
        class="h-full w-full object-cover bg-black transition-all brightness-75 md:brightness-100 grayscale group-hover:grayscale-0 md:group-hover:brightness-50 duration-200 filter" 
        <% if (poster !== 'N/A') { %>
        src="<%= poster %>" 
        <% } else { %>
            src="/static/assets/image-not-found.png" 
        <% }  %>
        alt="<%= title %>'s official poster">

    <section class="absolute bottom-0 left-0 w-full bg-white p-2 flex flex-col items-center justify-between gap-4 transform md:translate-y-full md:group-hover:translate-y-0 transition-all font-semibold font-special">
        <p class="capitalize text-xs text-center text-gray-700">
            <%= title %> <small>(<%= year %>)</small>
        </p>
        <div class="flex flex-col items-center justify-center w-max mx-auto mt-auto">
            <form action="">
                <button type="submit" class="text-xs text-gray-500 font-special capitalize">
                        <i class="far fa-heart"></i>
                        <small class="">add to favorites</small>
                    </button>
            </form>
            <form action="">
                <button type="submit" class="text-xs text-gray-500 font-special capitalize">
                    <i class="far fa-bookmark"></i>
                    <small class="">add to watchlist</small>
                </button>
            </form>
        </div>
    </section>
</article>