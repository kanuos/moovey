<article class="profileCard mx-auto my-4 h-80 w-64 relative flex flex-col shadow-lg  md:hover:scale-105 md:hover:shadow-2xl transform transition-all">
    <span class="absolute top-2 -left-3 bg-pink-600 capitalize font-special rounded text-white text-xs p-2 shadow-md z-10">
        <%= user.count %> reviews
    </span>
    <img 
    class="h-full w-full block object-cover absolute top-0 left-0 rounded-tr-md rounded-tl-md md:rounded-md"
    src="https://i.pinimg.com/originals/35/ca/10/35ca10e069ffe2869749d42f31edc4eb.jpg" alt="">
    <div class="flex flex-col items-center z-10 absolute bottom-0 p-2 bg-white left-0 w-full">
        <strong class="uppercase text-sm tracking-wider font-light">
            <%= user.name %>
        </strong>
        <% if(user.location) {%>
        <div class="flex items-center">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            <span class="font-light uppercase text-xs">
                <%= user.location %>
            </span>
        </div>
        <% } %>
    </div>
</article>