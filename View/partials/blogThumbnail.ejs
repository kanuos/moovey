<article class="bg-gray-50 h-52 mx-auto my-4 shadow-sm w-5/6 overflow-hidden rounded-md flex">
    <img 
        class="inline-block object-cover h-full w-2/5"
        src="<%= poster %>" alt="<%= title%>">
    <div class="flex flex-col w-3/5 p-2">
        <strong class="text-gray-500 text-sm font-semibold">
            <%= title%>
        </strong>
        <em class="capitalize text-xs text-gray-400 my-2">
            by sounak mukherjee
        </em>
        <ul class="flex">
            <li class="text-2xl text-red-600">&starf;</li>
            <li class="text-2xl text-red-600">&starf;</li>
            <li class="text-2xl text-red-600">&starf;</li>
            <li class="text-2xl text-red-600">&starf;</li>
            <li class="text-2xl text-gray-600">&starf;</li>
        </ul>
        <a href="<%= url %>" 
            class="text-xs capitalize mt-4 text-gray-500 hover:text-red-600 hover:underline">
            read review
        </a>
    </div>
</article>
