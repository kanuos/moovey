<%- include('../partials/head')%>
<body class="min-h-screen font-regular relative overflow-x-hidden custom-scrollbar">
    <!-- navbar -->
    <%- include('../partials/navbar')%>
    <!-- header -->
    <%- include('../partials/detail-header', {
        id : data.lid,
        title : data.list_title,
        desc : data.list_desc,
        date : data.date,
        user : {
            name : data.name,
            id : data.uid
        }
    })%>
    <%- include('../partials/bg_image') %>
    
    <%- include('../partials/social-share') %>
    <% if (data.movies.length > 0) {%>
        <main id="main" class="min-h-screen py-6 place-content-around grid grid-cols-1  gap-y-6 xl:gap-y-0 w-full sm:w-11/12 mx-auto max-w-5xl relative">
            <% data.movies.forEach((movie, index) => { %>
                <%- include('../partials/testimonial', {movie, index, count : data.movies.length}) %>    
            <% }) %>
        </main>
        <!-- main section end -->
    <% } else {%>
        <main id="main" class="grid place-items-center">
            <p class="font-semibold font-regular capitalize text-lg text-gray-500 mb-40">
                No items in the list.
            </p>
        </main>
    <% } %>
    <!-- testimonial section start -->
    <ul class="flex flex-col h-auto w-auto items-center gap-4 fixed bottom-10 right-4">
        <li>
            <button title="Testimonials" class="testimonialToggler h-8 w-8 outline-none focus:outline-none bg-black rounded-full text-white transition-all transform hover:scale-110 focus:scale-110">
                <i class="fas fa-comment-alt text-xs"></i>
            </button>
        </li>
    </ul>

    <%- include('../partials/testimonial-list')%>
    <%- include('../partials/testimonial-create-edit-modal')%>
   
    <%- include('../partials/footer') %>

    <script src="/static/js/navbar.js"></script>
    <script src="/static/js/list-detail.js"></script>
    <script src="/static/js/testimonial-sidebar.js"></script>
    <script src="/static/js/scroll-animation.js"></script>
</body>
</html>


