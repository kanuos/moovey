<%- include('../partials/head') %>

<body>
    <main class="min-h-screen w-full relative flex justify-center items-center p-4">
        <video muted loop autoplay class="object-cover object-left absolute top-0 left-0 h-full w-full md:object-center">
            <source src="/static/assets/video.mp4" type="video/mp4">
            </source>
        </video>
        <section class="bg-gray-50 w-4/5 max-w-3xl mx-auto p-4 rounded-md">
            <form method="POST" id="step-1" class="block max-w-prose mx-auto">
                <h1 class="font-title text-gray-600 text-center font-extralight capitalize">
                    <span class="text-red-600">Step 1:</span> Search movie
                </h1>
                <span id="search-error" class="my-2 text-xs text-center block text-red-600 capitalize font-bold">
                </span>
                <input 
                class="block text-center border-2 border-gray-400 w-full mx-auto mt-2 outline-none rounded-md focus:border-gray-600 focus:outline-none p-1 font-semibold"
                    name="searchKeyword"
                    autocomplete="off"
                    type="text" 
                    placeholder="Search Movie...">
                <button 
                    type="submit" 
                    class="rounded-sm block w-max py-1 px-3 font-semibold capitalize mx-auto mt-4 mb-2 bg-gray-700 text-gray-300 outline-none focus:outline-none hover:text-gray-200 shadow-md hover:shadow-lg transition-all text-sm">
                    Submit
                </button>
            </form>
            <div class="hidden w-full">
                <h1 class="font-title text-gray-600 text-center font-extralight text-sm capitalize">
                    <span class="text-red-600">Step 2:</span> Pick the movie you want to review
                </h1>
                <section id="movie-search-result" class="mx-auto w-full grid my-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3"></section>
            </div>
            <form action="/blogs" method="POST" id="step-2" class="hidden">
                <section id="selectedMovie"></section>
                <h1 class="font-title text-gray-600 text-center font-extralight capitalize">
                    <span class="text-red-600">Step 3:</span> Write review
                </h1>
                <section class="w-11/12 mx-auto mt-4 flex flex-col-reverse">
                    <input 
                        autocomplete="off"
                        type="text" 
                        name="title" 
                        id="title"
                        class="px-1 block text-center w-full outline-none border-2 border-gray-300 rounded-xl focus:outline-none focus:border-gray-500 transition-all font-semibold"
                    >
                    <label for="title" class="block text-center mb-2 text-sm font-semibold text-gray-400 capitalize">
                        Review title/heading
                    </label>
                </section>
                <section class="w-11/12 mx-auto mt-4 flex flex-col-reverse">
                    <input type="hidden" name="rating" id="reviewRating">
                    <ul class="flex justify-center items-center" id="displayStars">
                    </ul>
                    <label for="title" class="block text-center mb-2 text-sm font-semibold text-gray-400 capitalize">
                        Review title/heading
                    </label>
                </section>
                <button type="submit" class="block w-max mx-auto my-3 bg-gray-700 text-gray-100 px-4 py-1 capitalize">
                    submit post
                </button>
            </form>
        </section>

    </main>

</body>

</html>