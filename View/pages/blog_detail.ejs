<%- include('../partials/head') %>
<body class="overflow-x-hidden custom-scrollbar">
    <!-- page fixed top navbar start -->
    <%- include('../partials/navbar') %>
    
    <!-- background image -->
    <%- include('../partials/bg_image') %>
    
    <!-- header -->
    <header class="flex flex-col items-center justify-center pt-28 mb-8 h-screen relative">
        <!-- review date -->
        <p class="flex items-center gap-1 font-semibold text-gray-400">
            <i class="far fa-calendar text-xs"></i> 
            <small class="capitalize text-xs">
                <%= blog.created.date %>-<%= blog.created.month %>-<%= blog.created.year %>
            </small>
        </p>
        <!-- movie/show name -->
        <h2 class="w-5/6 mx-auto max-w-xl font-special capitalize text-transparent bg-gradient-to-r from-black to-pink-600 bg-clip-text break-words text-center text-2xl sm:text-3xl font-light mt-4 mb-8 md:mb-12 md:text-4xl">
            <small class="text-xs border-b border-gray-300">review of</small>
            <br>
            <%= blog.metadata.title %>
        </h2>
        <!-- profile pic -->
        <img
            class="h-20 w-20 block p-1.5 bg-white rounded-full shadow-xl md:h-32 md:w-32"
             src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT_pwCgmTMLtWz9zNust1p1E-CGBacPcKL8EwV4U8gzCSRKp5hUBt2DHtr8oPN7N1lIgHM&usqp=CAU" alt="">
        <!-- reviewer name -->
        <a href="" class="font-special capitalize text-sm mt-2 font-semibold text-black hover:text-pink-600 focus:text-pink-600 transition-all outline-none focus:outline-none">
            <%= blog.name %>
        </a>
        <!-- review duration -->
        <p class="font-regular mt-2 text-gray-400 transition-all">
            <i class="far fa-clock text-xs"></i>
            <small class="text-xs">
                <span id="duration">5</span> mins read
            </small>
        </p>
        <!-- dashboard link -->
        <a href="" class="text-sm outline-none focus:outline-none my-10 py-2 px-5 border border-dashed border-black hover:text-white hover:bg-black">
            <i class="fas fa-stethoscope"></i>
            <span class="capitalize font-special font-semibold">open in dashboard</span>
        </a>
        <!-- social icons -->
        <%- include('../partials/social-share') %>
    
        <a href="#main" class="mt-auto mb-4 text-sm font-regular capitalize text-center outline-none focus:outline-none hover:border-current border-transparent border-b transition-all">read review</a>
    </header>

    <!-- side drawer for metadata -->
    <aside id="asideDrawer" class="flex fixed top-0 left-0 h-screen w-full max-w-xl bg-gray-900 pb-4 justify-center items-end transform transition-all -translate-x-full z-30">
        <button class="sidebarToggler z-30 absolute top-4 right-4 text-2xl text-gray-500 hover:text-white transition-all outline-none focus:outline-none focus:text-white">
            <i class="far fa-caret-square-left"></i>
            <span class="hidden">close sidebar</span>
        </button>
        <section data-modal="img" class="aside-section transition-all absolute top-0 left-0 h-full w-full flex flex-col items-center justify-center gap-2">
            <strong class="text-gray-200 text-lg">
                Official Poster
            </strong>
            <img
                class="h-4/5 w-4/5 object-scale-down block p-2.5 bg-white filter drop-shadow-lg" 
                src="<%= blog.metadata.poster%>" alt="">
            <small class="text-gray-400 text-xs">
                Image courtesy OMDB API
            </small>
        </section>
        <section data-modal="info" class="aside-section transition-all absolute top-0 left-0 h-full w-full p-10 opacity-0">
            <strong class="my-2 text-white capitalize text-lg text-center block">
                <%= blog.metadata.type %> Info
            </strong>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">title</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.title %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">year</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.year %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">genre</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.genre %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">director</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.director %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">actors</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.actors %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 my-3">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">plot</span>
                <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                    <%= blog.metadata.plot %>
                </strong>
            </div>
            <div class="flex flex-col items-start gap-1 mt-8">
                <span class="text-xs text-pink-600 font-semibold capitalize font-regular">IMDB Rating</span>
                <ul class="flex items-center gap-2">
                    <li>
                        <strong class="font-special text-sm capitalize text-gray-200 leading-relaxed">
                            <%= blog.metadata.imdbrating %>/10
                        </strong>
                    </li>
                    <li>
                        <small class="font-special text-xs capitalize text-gray-200 leading-relaxed">
                            (<%= blog.metadata.imdbvotes %> votes)
                        </small>
                    </li>
                </ul>
            </div>
        </section>
        <ul class="hidden md:flex items-center gap-2">
            <li class="asidePanelToggler h-2.5 w-2.5 rounded-full bg-pink-600 transition-all transform hover:scale-105 cursor-pointer">
            </li>
            <li class="asidePanelToggler h-2.5 w-2.5 rounded-full bg-gray-200 transition-all transform hover:scale-105 cursor-pointer">
            </li>
        </ul>
    </aside>

    <!-- main content -->
    <main id="main" class="min-h-screen w-5/6 pt-14 pb-4 px-2 my-6 max-w-5xl mx-auto relative md:px-4">
        <!-- review title -->
        <h1 class="font-special font-semibold text-3xl lg:text-4xl">
            Weird funny whacky! A perfect sitcom for millenials
        </h1>
        
        <!-- stats section -->
        <ul class="flex items-center justify-start gap-4 my-4 text-pink-600 opacity-0 animateOnScroll transition-all transform scale-0">
            <li class="text-sm">
                <i class="far fa-eye"></i>
                <small class="font-semibold font-regular">150 Views</small>
            </li>
            <li class="text-sm">
                <i class="fas fa-star"></i>
                <small class="font-semibold font-regular">3.5/5 (14 Testimonials)</small>
