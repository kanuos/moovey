    <!-- testimonials -->
    <%- include('../partials/testimonial-list') %>
    <%- include('../partials/testimonial-create-edit-modal') %>


    <script src="/static/js/navbar.js"></script>
    <script src="/static/js/testimonial-sidebar.js"></script>
    <script src="/static/js/blog-detail.js"></script>
</body>
</html>