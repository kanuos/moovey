<%- include('../partials/head')%>

<body class="bg-gradient-to-r from-gray-400 to-gray-700 relative">
    <a href="/">
        <h1 class="absolute top-8 left-8 font-title text-gray-700 z-10 font-extrabold text-3xl flex justify-center items-baseline">
            <span class="text-red-600 font-title text-4xl uppercase">m</span>
            <span class="font-title">oovey</span>
        </h1>
    </a>
    <main class="flex items-center justify-center relative h-screen w-screen max-w-5xl mx-auto overflow-hidden cursor-default">
        <img 
            src="https://images.unsplash.com/photo-1548337037-776026b8f831?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=824&q=80"
            class="opacity-30 block object-fit absolute top-0 left-0 h-full w-full md:relative md:h-4/6 md:w-2/5 md:rounded-bl-md md:rounded-tl-md md:shadow-xl md:opacity-100" 
            alt="">
        <form id="register" class="overflow-hidden pt-8 z-10 h-4/6 w-4/5 md:w-2/5  bg-gray-50 rounded-md shadow-xl 
        md:rounded-bl-none md:rounded-tl-none grid grid-rows-6">
            <!-- form heading and error msg space -->
            <section class="row-start-1 row-end-2 flex flex-col justify-center items-center">
                <h1 class="text-2xl font-base uppercase block w-max mx-auto text-gray-500">
                    create new account
                </h1>
                <em class="capitalize hidden text-sm font-semibold text-center transition transform-all text-red-600 my-2">
                    field cannot be empty
                </em>
            </section>
            <!-- form body -->
            <section class="row-start-2 row-end-6 my-4 flex flex-col justify-end">
                <section class="w-11/12 mx-auto mt-4 flex flex-col-reverse">
                    <input 
                        autocomplete="chrome-off"
                        type="text" 
                        name="registerName" 
                        id="nameID"
                        class="px-1 block text-center w-full outline-none border-2 border-gray-300 rounded-xl focus:outline-none focus:border-gray-500 transition-all font-semibold"
                    >
                    <label for="nameID" class="block text-center mb-2 text-sm font-semibold text-gray-400">
                        Name
                    </label>
                </section>
                <section class="w-11/12 mx-auto mt-4 flex flex-col-reverse">
                    <input 
                        autocomplete="chrome-off"
                        type="text" 
                        name="registerEmail" 
                        id="emailID"
                        class="px-1 block text-center w-full outline-none border-2 border-gray-300 rounded-xl focus:outline-none focus:border-gray-500 transition-all font-semibold"
                    >
                    <label for="emailID" class="block text-center mb-2 text-sm font-semibold text-gray-400">
                        Email
                    </label>
                </section>
                <section class="w-11/12 mx-auto mt-4 flex flex-col-reverse">
                    <input 
                        autocomplete="new-password"
                        type="password" 
                        name="registerPassword" 
                        id="passwordID"
                        class="px-1 block text-center w-full outline-none border-2 border-gray-300 rounded-xl focus:outline-none focus:border-gray-500 transition-all font-semibold"
                    >
                    <label for="passwordID" class="block text-center mb-2 text-sm font-semibold text-gray-400">
                        Password
                    </label>
                </section>
                <button type="submit" class="block py-2 px-8 uppercase text-sm rounded-md text-gray-400 bg-gray-700 w-max my-4 mx-auto hover:text-gray-200 hover:shadow-xl transform hover:-translate-y-0.5 transition-all font-semibold">
                    submit
                </button>
            </section>
            <!-- redirect section  -->
            <section class="row-start-6 row-end-7 bg-gray-200 flex justify-center items-center capitalize font-semibold text-gray-500 text-sm">
                <span class="border-b-2 border-transparent">
                    existing user?
                </span>
                <a class="ml-1 border-b-2 border-transparent text-red-600 hover:text-red-700 hover:border-red-700 focus:text-red-700 focus:border-red-700" href="/login" class="">
                    log in
                </a>
            </section>
        </form>
    </main>
</body>
</html>