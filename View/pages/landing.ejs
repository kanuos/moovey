                <div class="flex-1 h-full flex flex-col items-center justify-start w-full">
                    <h2 class="my-2 text-2xl tracking-wide w-max mx-auto pb-1 uppercase font-special">
                        register
                    </h2>
                    <% if(isRegisterMode && errorMsg) { %>
                    <small class="text-xs text-center block mx-auto mb-2 text-black tracking-wider font-semibold capitalize transform transition-all -translate-y-ull opacity-100 pointer-events-none bg-gray-50 p-1.5 shadow-lg">
                        <!-- error message if any -->
                        <%= errorMsg %>
                    </small>
                    <% } %>
                    <div class="flex flex-1  flex-col items-center justify-start w-full mt-4">
                        <section class="flex flex-col-reverse items-start w-full justify-center">
                            <input 
                                type="text" 
                                name="registerName" 
                                id="name" 
                                placeholder="Your name"
                                class="w-full block p-1.5 rounded-sm shadow-lg bg-purple-300 bg-opacity-30 my-2 transform focus:outline-none outline-none focus:scale-x-105 focus:shadow-lg transition-all text-sm text-gray-50 opacity-60 focus:opacity-100 placeholder-gray-300 font-light lg:bg-transparent lg:shadow-none lg:border-b-2 lg:border-gray-400 lg:focus:border-pink-600 lg:focus:scale-x-100 lg:focus:shadow-none lg:focus:placeholder-pink-600 lg:text-gray-700 lg:placeholder-gray-600">
                            <label for="name" class="text-xs lg:text-gray-600 text-gray-50 tracking-wider uppercase">Name</label>
                        </section>
                        <section class="flex flex-col-reverse items-start w-full justify-center">
                            <input 
                                type="text" 
                                name="registerEmail" 
                                id="email" 
                                placeholder="Your email ID"
                                autocomplete="username"
                                class="w-full block p-1.5 rounded-sm shadow-lg bg-purple-300 bg-opacity-30 my-2 transform focus:outline-none outline-none focus:scale-x-105 focus:shadow-lg transition-all text-sm text-gray-50 opacity-60 focus:opacity-100 placeholder-gray-300 font-light lg:bg-transparent lg:shadow-none lg:border-b-2 lg:border-gray-400 lg:focus:border-pink-600 lg:focus:scale-x-100 lg:focus:shadow-none lg:focus:placeholder-pink-600 lg:text-gray-700 lg:placeholder-gray-600">
                            <label for="email" class="text-xs lg:text-gray-600 text-gray-50 tracking-wider uppercase">Email</label>
                        </section>
                        <section class="flex flex-col-reverse items-start w-full justify-center my-2 relative">
                            <input 
                                type="password" 
                                name="registerPassword" 
                                id="password" 
                                placeholder="Your password"
                                autocomplete="new-password"
                                class="w-full block p-1.5 rounded-sm shadow-lg bg-purple-300 bg-opacity-30 my-2 transform focus:outline-none outline-none focus:scale-x-105 focus:shadow-lg transition-all text-sm text-gray-50 opacity-60 focus:opacity-100 placeholder-gray-300 font-light lg:bg-transparent lg:shadow-none lg:border-b-2 lg:border-gray-400 lg:focus:border-pink-600 lg:focus:scale-x-100 lg:focus:shadow-none lg:focus:placeholder-pink-600 lg:text-gray-700 lg:placeholder-gray-600">
                            <label for="password" class="text-xs lg:text-gray-600 text-gray-50 tracking-wider uppercase">password</label>
                            <button data-target="register" type="button" class="showHidePassword absolute right-0 top-1/2 transform -translate-y-0.5 -translate-x-1/2 outline-none focus:outline-none text-gray-500 hover:text-black transition-colors">
                                <svg class="eye w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                                <svg class="eye w-5 h-5 block" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path></svg>
                            </button>
                        </section>
                    </div>
                </div>
                <div class="flex flex-col items-center">
                    <button type="submit" class="outline-none focus:outline-none px-6 py-2 bg-black text-gray-300 text-sm uppercase hover:shadow-lg transform transition-all hov:-translate-y-px hover:scale-110 my-4 rounded-sm">
                        register
                    </button>
                    <span class="text-xs capitalize text-gray-200 lg:text-gray-500 block lg:hidden">
                        Existing user?
                        <button type="button" class="accountModeToggler inline-block outline-none focus:outline-none">
                            click here
                        </button>
                    </span>
                </div>
            </form>
        </section>

    </div>
</section>

