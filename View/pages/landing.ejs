                        </section>
                        <section class="flex flex-col-reverse items-start w-full justify-center my-2 relative">
                            <input 
                                type="password" 
                                name="loginPassword" 
                                id="loginPassword" 
                                placeholder="Your password"
                                autocomplete="current-password"
