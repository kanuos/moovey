                        <span class="text-2xl capitalize font-light font-special my-4">
                            dont have an account?
                        </span>
                        <button type="button" class="accountModeToggler capitalize inline-block outline-none focus:outline-none">create account now</button>
                        <a href="/forgot-password" class=" my-1 capitalize inline-block outline-none focus:outline-none">
                            forgot password
                        </a>
                    </div>
                </div>        
            </section>
            <!-- form content -->
            <form class="absolute top-0 right-0 z-40 w-full h-full mx-auto px-6 py-8 text-center flex flex-col justify-between lg:w-1/2 lg:bg-white lg:text-pink-600"
                action="/login" 
                method="POST" 
                autocomplete="new-password">
                <div class="flex-1 h-full flex flex-col items-center justify-start w-full">
                    <h2 class="my-2 text-2xl tracking-wide w-max mx-auto pb-1 uppercase font-special">
                        login
                    </h2>
                    <% if(isLoginMode && errorMsg) { %>
                    <small class="text-xs text-center block mx-auto mb-2 text-black tracking-wider font-semibold capitalize transform transition-all -translate-y-ull opacity-100 pointer-events-none bg-gray-50 p-1.5 shadow-lg">
                        <!-- error message if any -->
                        <%= errorMsg %>
                    </small>
                    <% } %>
                    <div class="flex flex-1  flex-col items-center justify-start w-full mt-4">
                        <section class="flex flex-col-reverse items-start w-full justify-center">
                            <input 
                                type="text" 
                                name="loginEmail" 
                                id="loginEmail" 
                                placeholder="Your email ID"
                                autocomplete="username"
