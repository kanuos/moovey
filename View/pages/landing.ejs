<%- include('../partials/head') %>

<body class="relative h-full w-full font-regular min-h-screen overflow-x-hidden">
<video 
    preload="auto"
    oncontextmenu="return false" 
    class="pointer-events-none fixed top-0 left-0 h-screen w-screen object-cover opacity-10" 
    autoplay 
    muted 
    loop>
    <source src="/static/assets/video.mp4" type="video/mp4">
</video>

<section class="accountModalBox transform origin-center transition-all fixed top-0 left-0 h-screen w-full flex items-center justify-center bg-black z-30 

    <% if(isRegisterMode || isLoginMode) { %> 
        <%= 'scale-100' %> 
    <% } else { %> 
        <%= 'scale-0' %> 
    <% } %>
    
    ">
    <% if(redirect) { %>
    <span class="absolute top-0 left-0 w-full p-3 bg-gradient-to-r from-pink-600 to-purple-700 text-white text-sm font-special capitalize block text-center">
        <%= redirect %>
    </span>
    <% } %>

    <div class="flex items-start justify-center h-3/4 w-4/5 max-w-lg lg:max-w-4xl mx-auto overflow-hidden relative bg-gradient-to-br from-pink-600 to-purple-700 rounded">
        <video autoplay loop muted preload="auto" class="absolute top-0 left-0 h-full w-full block object-cover opacity-5 pointer-events-none lg:hidden">
            <source src="/static/assets/video.mp4" type="video/mp4">
        </video>

        <div class="flex z-50 items center w-full top-0 left-0 justify-end pr-4 pt-2 absolute">
            <button type="button" class="hideModal text-3xl outline-none focus:outline-none hover:text-black">
                &times;
            </button>
        </div>

        <!-- login form -->
        <section class="accountModal flex items-center z-40 absolute top-0 right-0 transform w-full h-full transition-all duration-500 text-white origin-center ease-out <% if (isLoginMode) {%> <%= 'scale-100 pointer-events-auto'%> <%} else { %><%= 'scale-0 pointer-events-none'%> <% } %>">
            <section class="hidden lg:flex absolute top-0 left-0 w-1/2 h-full">
                <video autoplay loop muted preload="auto" class="absolute top-0 left-0 h-full w-full block object-cover opacity-5 pointer-events-none">
                    <source src="/static/assets/video.mp4" type="video/mp4">
                </video>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 h-full flex items-center justify-center text-white flex-col w-full">
                    <strong class="tracking-tighter border-2 py-0.5 px-1.5 border-current flex-shrink-0 font-light text-lg cursor-pointer">
                        moovey••
                    </strong>
                    
