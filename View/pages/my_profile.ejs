<%- include('../partials/head')%>

<body class="relative min-h-screen">
    <!-- the header -->
    <main class="min-h-screen w-full overflow-x-hidden">
        <header class="w-full max-w-3xl mx-auto relative flex flex-col items-center md:px-2 py-5 md:grid md:row-start-1 md:row-end-7 md:col-start-1 md:col-end-12 md:h-screen">
            <figure class="h-56 w-56 flex items-center justify-center bg-transparent rounded-full p-2.5 shadow-lg md:h-72 md:w-72 md:col-start-3 md:col-end-13 md:rounded-none md:row-span-full md:bg-gradient-to-t md:from-primary md:to-secondary transform md:rotate-12 md:shadow-2xl md:mb-auto md:mt-4">
                <img class="h-full w-full mx-auto block object-cover object-top rounded-full transform md:-rotate-12" 
                    <% if(profile.picture) { %>
                        src="<%= profile.picture%>"
                    <% } else { %>
                    src="<%= profile.default_pic %>"
                    <% } %> 
                    alt="">
            </figure>
            <div class="flex flex-col text-dark md:bg-dark md:text-light md:h-4/5 md:row-span-full md:justify-center md:shadow-2xl" style="min-width: 30rem;">
                <h2 class="text-center font-title hidden md:block capitalize text-primary text-3xl">
                    my profile
                </h2>
                <strong class="block w-5/6 mx-auto font-light text-3xl capitalize my-4">
                    <%= profile.name %>
                </strong>
                <div class="w-5/6 mx-auto">
                    <span class="inline leading-4 capitalize text-xl">Bio:</span>
                    <p class="text-lg font-light pl-3 border-l-4 border-dark md:border-primary italic mb-4">
                        <% if(profile.bio) {%>
                            <%= profile.bio %>
                        <%} else { %>
                            No bio written
                        <% } %>
                    </p>
                </div>
                <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                    <div class="flex items-center justify-start">
                        <span class="inline leading-4 capitalize text-xl">
                            birthday:
                        </span>
                    </div>
                    <p class="text-lg font-light flex items-center justify-start flex-row-reverse">
                        <span>
                            <% if(profile.dob) {%>
                                <%= profile.dob %>
                            <% } else {%>
                                Not Specified
                            <% } %>
                        </span>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"></path></svg>
                    </p>
                </div>
                <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                    <div class="flex items-center justify-start">
                        <span class="inline leading-4 capitalize text-xl">
                            country:
                        </span>
                    </div>
                    <p class="text-lg font-light flex items-center justify-start flex-row-reverse">
                        <span class="capitalize">
                            <% if(profile.country) {%>
                                <%= profile.country %>
                            <% } else {%>
                                Not Specified
                            <% } %>
                        </span>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </p>
                </div>
                <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                    <div class="flex items-center justify-start">
                        <span class="inline leading-4 capitalize text-xl">
                            email:
                        </span>
                    </div>
                    <p class="text-lg font-light flex items-center justify-start flex-row-reverse">
                        <span>
                            <%= profile.email %>
                        </span>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    </p>
                    
                </div>
                <div class="flex items-center justify-center my-4">
                    <a href="#myBlogs" class="mx-4 px-4.5 py-2.5 font-bold capitalize bg-dark text-light w-1/3 text-center rounded-sm hover:bg-primary hover:text-dark hover:shadow-2xl transition-all duration-300 md:bg-gradient-to-r md:bg-light md:text-secondary md:hover:text-dark">
                        My Blogs
                    </a>
                    
                    <a href="/edit-profile" class="mx-4 px-4.5 py-2.5 font-bold capitalize bg-dark text-light w-1/3 text-center rounded-sm hover:bg-primary hover:text-dark hover:shadow-2xl transition-all duration-300 md:bg-gradient-to-r md:bg-light md:text-secondary md:hover:text-dark">
                        Edit profile
                    </a>
                </div>
            </div>
        </header>
    </main>
        <!-- user's profile -->
    <section id="myBlogs" class="gradient-bg min-h-screen p-4">
        <h1>
            You haven't written/reviewed a movie yet!
        </h1>
    </section>

    <%- include('../partials/footer') %>
</body>
