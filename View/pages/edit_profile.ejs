<%- include('../partials/head') %>
<body class="min-h-screen relative">
    <!-- the header -->
    <main class="min-h-screen w-full overflow-x-hidden">
        <header class="w-full">
            <form 
                class="w-full max-w-5xl mx-auto relative flex flex-col items-center md:px-4 py-5 md:grid md:row-start-1 md:row-end-7 md:col-start-1 md:col-end-12 md:h-screen md:rounded-md"
                action="/edit-profile"
                method="POST" 
                enctype="multipart/form-data">
                <figure class="h-56 w-56 flex items-center justify-center rounded-full p-2.5 shadow-lg md:h-72 md:w-72 md:col-start-10 md:col-end-12 md:rounded-none md:row-span-full bg-gradient-to-t from-primary to-secondary transform md:rotate-12 md:shadow-2xl md:mb-auto md:mt-4 relative ">
                    <input type="file" name="image" id="image" class="hidden">
                    <label
                        for="image" 
                        class="absolute top-1/2 left-1/2 transform duration-300 ease-out -translate-y-1/2 -translate-x-1/2 z-10 text-dark cursor-pointer md:-rotate-12 hover:scale-125">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </label>
                    <img class="h-full w-full mx-auto block object-cover object-top rounded-full transform md:-rotate-12 opacity-25" 
                    <% if(profile.bio) {%>
                        src="<%= profile.picture %>" 
                    <%} else {%>
                        src = "<%= profile.default_pic%>"
                        <% } %>
                        alt="">
                </figure>
                <div class="flex w-full flex-col text-dark md:bg-dark md:text-primary md:h-full md:row-span-full md:justify-center md:shadow-2xl md:col-start-1 md:col-end-10 py-6">
                    <h2 class="text-center my-2 text-dark md:text-primary font-title font-light text-4xl">
                        Edit Profile
                    </h2>
                    <div class="w-5/6 mx-auto">
                        <span class="inline leading-4 capitalize text-xl">Name:</span>
                        <input 
                            name="name"
                            class="block w-full mx-auto font-light text-xl capitalize my-4 bg-light outline-none focus:outline-none rounded-lg px-1 border-2 border-primary focus:border-dark text-dark"
                            value="<%= profile.name %>"
                        />
                    </div>
                    <div class="w-5/6 mx-auto">
                        <span class="inline leading-4 capitalize text-xl">Bio:
                            <small class=" text-xs inline-block text-center uppercase font-semibold">
                                max 300 characters
                            </small>
                        </span>
                        <textarea
                            name="bio" 
                            class="h-56 p-1.5 rounded-lg border-2 resize-none border-primary overflow-hidden text-dark text-lg font-light block w-full italic bg-light outline-none focus:outline-none focus:border-dark">
                            <% if(profile.bio) {%>
                                <%= profile.bio %>
                            <%}%>
                        </textarea>
                    </div>
                    <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                        <div class="flex items-center justify-between w-full">
                            <span class="inline leading-4 capitalize text-xl">
                                birthday:
                            </span>
                            <input 
                                type="date" 
                                name="dob"
                                <% if (profile.dob) {%>
                                    value ="<%= profile.dob %>"
                                <% } %>
                                class="border-2 text-dark md:w-1/2 p-0.5 border-primary rounded-lg focus:outline-none focus:border-dark md:ml-auto">
                        </div>
                    </div>
                    <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                        <div class="flex items-center justify-between w-full">
                            <span class="inline leading-4 capitalize text-xl">
                                country:
                            </span>
                            <input 
                                name="country"
                                <% if (profile.dob) {%>
                                    value ="<%= profile.country %>"
                                <% } %>
                                class="border-2 text-dark md:w-1/2 p-0.5 border-primary rounded-lg focus:outline-none focus:border-dark md:ml-auto">
                        </div>
                    </div>
                    <div class="w-5/6 mx-auto flex items-center my-1 justify-between">
                        <div class="flex items-center justify-start">
                            <span class="inline leading-4 capitalize text-xl">
                                email:
                            </span>
                        </div>
                        <p class="text-lg font-light flex items-center justify-start flex-row-reverse cursor-not-allowed">
                            <span>
                                abc@abc.com
                            </span>
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        </p>
                        
                    </div>
                    <div class="flex items-center justify-center my-4">
                        <button type="submit" class="mx-4 px-4.5 py-2.5 font-bold capitalize bg-dark text-light w-1/3 text-center rounded-sm hover:bg-primary hover:text-dark hover:shadow-2xl transition-all duration-300 md:bg-gradient-to-r md:bg-light md:text-dark md:hover:text-dark">
                            update
                        </button>
                    </div>
                </div>
            </form>
        </header>
    </main>
</body>

</html>